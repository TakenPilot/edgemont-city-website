@import 'nib'

clr = #897969
clr2 = #9A3324
clr3 = #E3E1DB
clr4 = #CBCE66
clr5 = #E1E3A6
mobile-header-height = 170px
tablet-header-height = 170px
desktop-header-height = 150px

desktop-width = 1200px
tablet-width = 900px
mobile-width = 500px
minimum-width = 500px

@font-face {
  font-family UpperEastSide
  src url(../font/UpperEastSide.ttf)
  font-size 4rem
}

h1, h2, h3, h4, h5, h6
  clear both

h1
  font-family UpperEastSide, arial, sans-serif
  text-transform capitalize;
  padding-left 4rem;

body
  background clr4
  margin 0
  padding 0

ul
  list-style-type none

li
  padding-top 1rem

a
  color black
  text-decoration none

a[name]
  display block
  position relative
  @media screen and (max-width tablet-width)
    top (-(mobile-header-height))

  @media screen and (min-width tablet-width) and (max-width desktop-width)
    top (-(tablet-header-height))

  @media screen and (min-width desktop-width)
    top (-(desktop-header-height))

  visibility hidden

table
  width 100%
  td.price
    text-align right

img {
  max-width 100%
  height auto !important
}

.divider
  padding-right 0.7rem
  padding-left 0.7rem

.container
  margin-right auto
  margin-left auto
  padding 1rem
  box-sizing border-box
  @media screen and (max-width tablet-width)
    width mobile-width

  @media screen and (min-width tablet-width) and (max-width desktop-width)
    width tablet-width

  @media screen and (min-width desktop-width)
    width desktop-width

h2
  margin-top 2rem

.clear
  clearfix()

.pull-right
  float right

desktop-third-width = (desktop-width/3 - 14rem)
desktop-third-height = (desktop-width/3*2/3 - 14rem)
tablet-third-width = (tablet-width/3 - 14rem)
tablet-third-height = (tablet-width/3*2/3 - 14rem)
mobile-third-width = (mobile-width/3 - 14rem)
mobile-third-height = (mobile-width/3*2/3 - 14rem)

@require 'images'
@require 'header'
@require 'highlights'
@require 'menu'
@require 'footer'

