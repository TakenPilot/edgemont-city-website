.menu
  .quick-links
    transform translate(20px, 0)
    position relative
    width: 95%
    a
      font-size 1.2rem
      font-weight bold
      line-height 1.5rem
      margin 0.2rem
      display inline-block
      padding 0.5rem
    a:hover
      background-color clr7

  .menu-container
    line-height 2rem
    @media screen and (max-width desktop-width)
      .image
        display none

    @media screen and (min-width desktop-width)
      .image
        margin 0
        margin-right auto
        margin-left auto
        padding 0
        width desktop-third-width
        height desktop-third-height

    .photo-list
      width (desktop-width / 2) - 80rem
      @media screen and (max-width desktop-width)
        display none
      @media screen and (min-width desktop-width)
        vertical-align top
        display inline-block
        margin-right 1rem
        margin-left 1rem

    .menu-section-container
      @media screen and (max-width desktop-width)
        margin-right auto
        margin-left auto
      @media screen and (min-width desktop-width)
        width (desktop-width / 2) - 80rem
        display inline-block
        margin-right 1rem
        margin-left 1rem
        .image
          display block
          margin 1rem

      border-radius 10px
      background clr5
      margin-top 1rem
      margin-bottom 1rem
      padding 1rem

    .menu-section-list
      .name
        max-width 75%
        display inline-block
      .price
        padding-right 1rem
        padding-left 1rem
      .small:before
        content " Small "
        display inline
        font-style italic
      .large:before
        content " Large "
        display inline
        font-style italic
      .each-group
        height 1rem